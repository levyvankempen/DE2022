{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "gcr.io/$PROJECT_ID/prediction-api-gcs:0.0.1",
        "./assignment1/prediction-api-gcs"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "gcr.io/$PROJECT_ID/prediction-api-gcs:0.0.1"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "prediction-api",
        "--image",
        "gcr.io/$PROJECT_ID/prediction-api-gcs:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--allow-unauthenticated",
        "--update-env-vars",
        "PROJECT_ID=$PROJECT_ID,MODEL_REPO=model_repo_de2022_2093373,MODEL_NAME=lrmodel.pkl",
        "--no-cpu-throttling",
        "--memory",
        "4 Gi"
      ]
    }
  ]
}
